<% if @order.payment_method.type == PaymentMethod::PaymentNetwork %>
  <% content_for :head do  -%>
    <%= javascript_tag do -%>
    jQuery(document).ready(function() {
      var form = $('#checkout_form_confirm');
      var submit_button = $("#checkout_form_confirm input[type='submit']")

      form.append("<%= escape_javascript(hidden_field_tag(:user_id, @order.payment_method.preferred_user_id)) %>");
      form.append("<%= escape_javascript(hidden_field_tag(:project_id, @order.payment_method.preferred_project_id)) %>");
      form.append("<%= escape_javascript(hidden_field_tag(:amount, @order.total)) %>");
      form.append("<%= escape_javascript(hidden_field_tag(:reason_1, @order.number)) %>");
      form.append("<%= escape_javascript(hidden_field_tag(:user_variable_0, @order.payment_method.id)) %>");
      form.append("<%= escape_javascript(hidden_field_tag(:user_variable_1, @order.id)) %>");

      form.attr('action', '<%= escape_javascript(@order.payment_method.server_url) %>');
      form.attr('method', 'post');
      submit_button.val("<%= @order.payment_method.preferred_button_text %>");
    });
    <% end -%>
  <% end -%>
<% end %>
